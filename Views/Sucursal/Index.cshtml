@model List<Sucursal>
@{
    ViewData["Title"] = "Sucursales";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
</head>
<body>

    <h1>@ViewData["Title"]</h1>
    
    <a type="button" class="btn btn-primary" asp-controller="Sucursal" asp-action="Create">
        Añadir sucursal
    </a>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Dirección</th>
                <th scope="col">Teléfono</th>
                <th scope="col">Acciones</th>
            </tr>
        </thead>
        <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <th scope="row">@item.IdSucursal</th>
                        <td>@item.DireccionSucursal</td>
                        <td>+593 9 @item.TelefonoSucursal</td>
                        <td>
                            <a type="button" class="btn btn-primary" asp-controller="Sucursal" asp-action="Details">
                                Visualizar</a>
                            <a type="button" class="btn btn-warning" asp-controller="Sucursal" asp-action="Edit">
                                Editar</a>
                            <a type="button" class="btn btn-danger" asp-controller="Sucursal" asp-action="Delete">
                                Eliminar</a>
                        </td>
                    </tr>
                }
        </tbody>
    </table>

</body>
</html>